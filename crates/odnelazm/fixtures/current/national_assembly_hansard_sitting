      <script defer="" src="./Thursday, 12th February, 2026 - Afternoon Sitting_files/script.js" data-website-id="c29b6c19-8121-4464-a5e7-a64b2d5c9a0a"></script>
    
    
      <!-- Global site tag (gtag.js) - Google Analytics -->
      <script async="" src="./Thursday, 12th February, 2026 - Afternoon Sitting_files/js"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments)};
        gtag('js', new Date());

        gtag('config', 'G-DTKJK4SXZ4');
      </script>
    
    
  <script>
      document.addEventListener('DOMContentLoaded', function() {
          // Smooth scroll to anchor and highlight target chunk
          if (window.location.hash) {
              const targetId = window.location.hash.substring(1);
              const targetElement = document.getElementById(targetId);

              if (targetElement) {
                  // Scroll to the element smoothly
                  setTimeout(() => {
                      targetElement.scrollIntoView({ behavior: 'smooth', block: 'center' });

                      // Add visual highlight to the target chunk
                      targetElement.classList.add('chunk-target-highlight');

                      // Remove highlight after 3 seconds
                      setTimeout(() => {
                          targetElement.classList.remove('chunk-target-highlight');
                      }, 3000);
                  }, 100);
              }
          }

          // Highlight search terms in both detail view and search results
          const urlParams = new URLSearchParams(window.location.search);
          const searchQuery = urlParams.get('query') || '';

          if (searchQuery && searchQuery.trim()) {
              highlightSearchTerms(searchQuery);
          }

          function highlightSearchTerms(query) {
              const terms = query.split(' ').filter(term => term.length > 2);
              // Highlight in detail view chunks
              const contentChunks = document.querySelectorAll('.chunk-wrapper');
              contentChunks.forEach(chunk => {
                  let content = chunk.innerHTML;
                  let hasHighlight = false;
                  terms.forEach(term => {
                      const regex = new RegExp(`(${escapeRegExp(term)})`, 'gi');
                      if (regex.test(content)) {
                          content = content.replace(regex, '<span class="search-highlight">$1</span>');
                          hasHighlight = true;
                      }
                  });
                  if (hasHighlight) {
                      chunk.innerHTML = content;
                      chunk.classList.add('highlighted');
                  }
              });

              // Highlight in search results
              const resultContents = document.querySelectorAll('.result-content');
              resultContents.forEach(content => {
                  let html = content.innerHTML;
                  terms.forEach(term => {
                      const regex = new RegExp(`(${escapeRegExp(term)})`, 'gi');
                      html = html.replace(regex, '<span class="search-highlight">$1</span>');
                  });
                  content.innerHTML = html;
              });
          }

          function escapeRegExp(string) {
              return string.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
          }

          // Auto-focus search input if no results
          {
              %
              if show_search_results and not results %
          }
          const searchInput = document.querySelector('input[name="query"]');
          if (searchInput) {
              searchInput.focus();
          } {
              %
              endif %
          }
      });
  </script>

  

